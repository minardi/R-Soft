
<!DOCTYPE html>
<html>
<head>
  <title>RSoft</title> 
  <% if user_signed_in? %>

    <link rel="stylesheet" type="text/css" href="app/styles/main.css">
    <script src = "app/scripts/templates.js" type = "text/javascript"></script> 
    <script src = "app/scripts/vendor.js" type = "text/javascript"></script>
    <script src = "app/scripts/plugins.js" type = "text/javascript"></script>  
    <script src = "app/scripts/main.js" type = "text/javascript"></script>
    <script>        
        $.ajaxSetup({                 
            headers:{
                'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
            }                      
        });          
    </script> 

  <% else %>

    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>

  <% end %>    
        
  <%= csrf_meta_tags %> 
</head>
<body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <%= render 'layouts/user_widget' %>
</body>
</html>
